[package]
name = "{{crate_name}}"
version = "{{crate_version}}"
edition = "{{rust_edition}}"
description = "{{crate_description}}"
authors = ["Akshay Kumar (akskum95@gmail.com)"]
{%- if remote_type != 'no remote' %}
repository = "{{repository}}"
{%- endif -%}
{%- if opensource %}
license = "MIT OR Apache-2.0"
{%- else %}
license-file = "COPYRIGHT"
{%- endif %}

[dependencies]

[dev-dependencies]

[lints.clippy]
pedantic = { level = "warn", priority = -100 }

[lints.rust]
unsafe_code = "forbid"
